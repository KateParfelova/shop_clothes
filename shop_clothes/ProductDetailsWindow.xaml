<Window x:Class="shop_clothes.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        mc:Ignorable="d"
        Title="Детали товара" 
        Style="{StaticResource jk}"
        WindowStartupLocation="CenterOwner">

   <!-- <Window.Resources>
         Конвертер для видимости 
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:ZeroToCollapsedConverter x:Key="ZeroToCollapsedConverter"/>
    </Window.Resources> -->

    <Grid Margin="15">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Изображение товара -->
                <Image Source="{Binding CurrentProduct.imagePath}"
                       Height="200" Stretch="Uniform" Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>

                <!-- Название -->
                <TextBlock Text="{Binding CurrentProduct.shortName}" 
                        FontSize="18" FontWeight="Bold" Margin="0,0,0,10"
                        TextWrapping="Wrap"/>

                <!-- Название -->
                <TextBlock Text="{Binding CurrentProduct.fullName}" 
                           FontSize="18" FontWeight="Bold" Margin="0,0,0,10"
                           TextWrapping="Wrap"/>

                <!-- Рейтинг и покупки -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="★" Foreground="#FFD4AF37" FontSize="12"/>
                    <TextBlock Text="{Binding CurrentProduct.rating, StringFormat={}{0:F1}}" FontSize="12" Margin="2,0,0,0"/>
                   
                    <TextBlock Text="{Binding CurrentProduct.purchasedCount, StringFormat=' ({0} покупок)'}" 
                               FontSize="12" Foreground="Gray" Margin="5,0,0,0"/>
                  
                    
                </StackPanel>
               

                <!-- Цены -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <!-- Оригинальная цена -->
                    <TextBlock Text="{Binding CurrentProduct.price, StringFormat='Цена: {0:F0}Br'}" 
                               FontSize="14"/>

                    <!-- Скидка -->
                    <TextBlock Text="{Binding CurrentProduct.discount, StringFormat='Скидка: {0}%'}" 
                               Foreground="Green" FontSize="14"
                               />
                    <!--Visibility="{Binding discount, Converter={StaticResource ZeroToCollapsedConverter}}"-->

                    <!-- Итоговая цена -->
                    <TextBlock Text="{Binding CurrentProduct.FinalPrice, StringFormat='Итоговая цена: {0:F0}Br'}" 
                               FontSize="16" FontWeight="Bold" Foreground="#FF27ae60"/>
                    <!--Visibility="{Binding discount, Converter={StaticResource ZeroToCollapsedConverter}}"-->

                </StackPanel>

                <!-- Описание -->
                <TextBlock Text="{Binding CurrentProduct.description}" 
                           TextWrapping="Wrap" Margin="0,0,0,15"
                           FontSize="12"/>

                <!-- Характеристики -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Характеристики:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Категория:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,5,2"/>
                        <TextBlock Text="{Binding CurrentProduct.Category.name}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,2"/>

                        <TextBlock Text="Цвет:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,5,2"/>
                        <TextBlock Text="{Binding CurrentProduct.color}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,2"/>

                        <TextBlock Text="Размер:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,5,2"/>
                        <TextBlock Text="{Binding CurrentProduct.size}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,2"/>

                        <TextBlock Text="Производитель:" Grid.Row="3" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,5,2"/>
                        <TextBlock Text="{Binding CurrentProduct.manufacturer}" Grid.Row="3" Grid.Column="1" Margin="0,0,0,2"/>

                        <TextBlock Text="Страна:" Grid.Row="4" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,5,2"/>
                        <TextBlock Text="{Binding CurrentProduct.deliveryCountry}" Grid.Row="4" Grid.Column="1" Margin="0,0,0,2"/>
                    </Grid>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Style="{StaticResource CancelButtonStyle}"
                     IsCancel="True"/>

                    <Button 
                    Content="{DynamicResource IntoBasketButton}"
                    Command="{Binding AddToCartCommand}"
                    CommandParameter="{Binding CurrentProduct}"
                    >
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding CurrentProduct.isOutOfStock}" Value="false"/>
                                            <Condition Binding="{Binding CurrentProduct.quantity}" Value="0"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>