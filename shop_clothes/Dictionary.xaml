<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Статические ресурсы -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF4A90E2"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#FF50E3C2"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FFD0021B"/>
        <SolidColorBrush x:Key="TextColor" Color="#FF333333"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FFF9F9F9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#FF7ED321"/>
        <SolidColorBrush x:Key="NeutralColor" Color="#FF9B9B9B"/>
    
    <!-- Стили кнопок -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
        <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource AccentColor}"/>
         </Style>
    
    <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="NeutralButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Background" Value="{StaticResource NeutralColor}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

        <!-- Конкретные кнопки -->
        <Style x:Key="LoginButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Content" Value="{DynamicResource LoginButton}"/>
        </Style>

        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
        <Setter Property="Content" Value="✏️"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource DangerButtonStyle}">
        <Setter Property="Content" Value="🗑️"/>
        </Style>

        <Style x:Key="DetailsButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
        <Setter Property="Content" Value="{DynamicResource MoreDetailedButton}"/>
        </Style>
    
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource SuccessButtonStyle}">
        <Setter Property="Content" Value="{DynamicResource SaveButton}"/>
        <Setter Property="ToolTip" Value="Сохранить изменения"/>
        </Style>

    <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource SuccessButtonStyle}">
        <Setter Property="Content" Value="{DynamicResource AddButton}"/>
        <Setter Property="ToolTip" Value="Сохранить изменения"/>
    </Style>

    <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource NeutralButtonStyle}">
        <Setter Property="Content" Value="{DynamicResource CancelButton}"/>
        <Setter Property="ToolTip" Value="Отменить изменения"/>
    </Style>
    
  
    <Style x:Key="WindowAddStyle" TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Width" Value="800"/>
        <Setter Property="Icon" Value="{DynamicResource AppIcon}"/>
    </Style>

    <Style x:Key="WindowClientStyle" TargetType="Window" BasedOn="{StaticResource WindowAddStyle}">
        <Setter Property="Height" Value="450"/>
        <Setter Property="Width" Value="850"/>
    </Style>
    <Style x:Key="StoreMainWindow" TargetType="Window" BasedOn="{StaticResource WindowClientStyle}">
        <Setter Property="Width" Value="2000"/>
        <Setter Property="Height" Value="Auto"/>
    </Style>
    <Style x:Key="WindowRegistrationStyle" TargetType="Window" BasedOn="{StaticResource WindowAddStyle}">
        <Setter Property="Height" Value="440"/>
        <Setter Property="Width" Value="400"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
    </Style>
    <Style x:Key="StyleTextBlock" TargetType="TextBlock">
        <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
    </Style>
    <Style x:Key="DataGrid" TargetType="DataGrid">

        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="AutoGenerateColumns" Value="True"/>
    </Style>

    <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
    </Style>

    <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
    </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        </Style>
    
    <Style x:Key="StyleMenuItem" TargetType="MenuItem">
        <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
    </Style>
    <Style x:Key="jk" TargetType="Window">
        <Setter Property="Height" Value="500"></Setter>
        <Setter Property="Width" Value="400"></Setter>
    </Style>
    <Style x:Key="AddToCartButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="Content" Value="{DynamicResource IntoBasketButton}"/>
        <Setter Property="Visibility" Value="Visible"/>
        <Setter Property="IsEnabled" Value="True"/>
        <Style.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding isOutOfStock}" Value="false"/>
                    <Condition Binding="{Binding quantity}" Value="0"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Visibility" Value="Collapsed"/>
                <Setter Property="IsEnabled" Value="False"/>
            </MultiDataTrigger>
        </Style.Triggers>
        
    </Style>

</ResourceDictionary>