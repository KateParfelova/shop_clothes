<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Цвета для темной темы -->
	<Color x:Key="PrimaryColor">Black</Color>
	<Color x:Key="SecondaryColor">Gray</Color>
	<Color x:Key="TextColor">White</Color>
	<Color x:Key="TextCategoryColor">#D6D5CB</Color>
	<Color x:Key="AccentColor">WhiteSmoke</Color>
	<Color x:Key="BorderColor">#FF555555</Color>
	<Color x:Key="CardBackground">Gray</Color>
	<Color x:Key="CardBackgroundDiscount">#92886F</Color>

	<!-- Кисти -->
	<SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
	<SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
	<SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
	<SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
	<SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
	<SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
	<SolidColorBrush x:Key="CardBackgroundDiscountBrush" Color="{StaticResource CardBackgroundDiscount}"/>
	<SolidColorBrush x:Key="TextCategoryColorBrush" Color="{StaticResource TextCategoryColor}"/>


</ResourceDictionary>