<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Фиолетовая темная тема -->
	<Color x:Key="PrimaryColor">#FF1A1A2E</Color>
	<!-- Темно-фиолетовый почти черный -->
	<Color x:Key="SecondaryColor">#FF16213E</Color>
	<!-- Темный фиолетово-синий -->
	<Color x:Key="TextColor">#FFE4E4E4</Color>
	<!-- Светло-серый текст -->
	<Color x:Key="TextCategoryColor">#FFBB86FC</Color>
	<!-- Светло-фиолетовый для категорий -->
	<Color x:Key="AccentColor">#FF7B1FA2</Color>
	<!-- Яркий фиолетовый акцент -->
	<Color x:Key="BorderColor">#FF6200EA</Color>
	<!-- Фиолетовая граница -->
	<Color x:Key="CardBackground">#FF242038</Color>
	<!-- Темно-фиолетовый фон карточек -->
	<Color x:Key="CardBackgroundDiscount">#FF4A235A</Color>
	<!-- Пурпурный для акционных карточек -->
	<Color x:Key="ButtonHoverColor">#FF9C27B0</Color>
	<!-- Фиолетовый при наведении -->
	<Color x:Key="SuccessColor">#FF4CAF50</Color>
	<!-- Зеленый для успешных действий -->

	<!-- Кисти -->
	<SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
	<SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
	<SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
	<SolidColorBrush x:Key="TextCategoryBrush" Color="{StaticResource TextCategoryColor}"/>
	<SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
	<SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
	<SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
	<SolidColorBrush x:Key="CardBackgroundDiscountBrush" Color="{StaticResource CardBackgroundDiscount}"/>
	<SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}"/>
	<SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>


</ResourceDictionary>