<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Цвета -->
    <Color x:Key="PrimaryColor">White</Color>
	<Color x:Key="SecondaryColor">WhiteSmoke</Color>
    <Color x:Key="TextColor">Black</Color>
	<Color x:Key="TextCategoryColor">Gray</Color>
    <Color x:Key="AccentColor">White</Color>
    <Color x:Key="BorderColor">#FFDDDDDD</Color>
	<Color x:Key="CardBackground">White</Color>
	<Color x:Key="CardBackgroundDiscount">#FFFFFDE7</Color>

    <!-- Кисти -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
	<SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
	<SolidColorBrush x:Key="CardBackgroundDiscountBrush" Color="{StaticResource CardBackgroundDiscount}"/>
	<SolidColorBrush x:Key="TextCategoryColorBrush" Color="{StaticResource TextCategoryColor}"/>

